@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="border p-3 mt-4">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ProductName" disabled class="form-control border-0 shadow" />
                        <label asp-for="ProductName" class="ms-2">Product Name</label>
                       
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" disabled class="form-control border-0 shadow" />
                        <label asp-for="Price" class="ms-2">Price</label>
                       
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="discountRate" disabled class="form-control border-0 shadow" />
                        <label asp-for="discountRate" class="ms-2">Discount Price</label>
                        
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="quantity" disabled class="form-control border-0 shadow" />
                        <label asp-for="quantity" class="ms-2">Quantity</label>
                       
                    </div>

                    <div class="form-floating py-2 col-12">
                        <label asp-for="CategoryId" disabled class="ms-2"></label>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="file" accept="image/*" name="img" disabled class="form-control border-0 shadow" />
                        <label asp-for="ImageUrl" class="ms-2">Image</label>
                       
                    </div>
                    <div class="form-floating py-2 col-12">
                        <label asp-for="ImageUrl" class="ms-2">Image</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" height="100" alt="Current Image" />
                        }
                    </div>
                    @* <div class="form-floating py-2 col-12">
                        <input type="file" accept="image/*" name="img" class="form-control border-0 shadow" />
                        <label asp-for="ImageUrl" class="ms-2">Image</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div> *@
                    @* <div class="form-floating py-2 col-12">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" height="100" alt="Current Image" />
                        }
                    </div> *@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" disabled class=" form-control border-0 shadow" />
                        <label asp-for="Description" class="ms-2">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary form-control">Delete</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


