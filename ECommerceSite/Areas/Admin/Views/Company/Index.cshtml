@model List<Company>

<div class="card shadow border-0 mt-4">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-dark">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"> Add New Company</i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode </th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
            </tr>
        </thead>

        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        @data.Name
                    </td>
                    <td>
                        @data.StreetAddress
                    </td>
                    <td>
                        @data.City
                    </td>
                    <td>
                        @data.State
                    </td>
                    <td>
                        @data.PostalCode
                    </td>
                    <td>
                        @data.PhoneNumber
                    </td>
                    <td>

                    <td>
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@data.Id" class="btn btn-primary mx-14">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>

                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@data.Id" class="btn btn-danger mx -14">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>