@model List<Product>
@{
    ViewData["Title"] = ViewBag.CategoryName;
}
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <img src="@product.ImageUrl" class="card-img-top mx-auto d-block" style="height: 150px; width: auto; object-fit: cover;" alt="@product.ProductName">
                    <div class="card-body text-center">
                        <h6 class="card-title">@product.ProductName</h6>
                        <p class="card-text">$: @product.Price</p>
                        <p class="card-text">Offered Price $: @product.discountRate</p>
                    </div>
                    <div>
                        <a asp-action="ProductDetails" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

